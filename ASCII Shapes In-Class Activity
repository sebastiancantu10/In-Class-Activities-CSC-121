#include <iostream>
using namespace std;
int main() {
  int choice;
  cout << "Welcome to the ASCII Shapes program! Would you like to draw a (1) square or (2) triangle?"
        << endl << endl;
  cin >> choice;
  
  if (choice == 1) {
    int side_length;
    cout << "\n\nGreat choice! How big do you want the side length to be?" << endl << endl;
    cin >> side_length;
    cout << "\n\nHere is your square: " << endl;

    for (int i = 0; i < side_length; i++) {
      cout << endl;
        for (int j = 0; j < side_length; j++) {
          cout << "*" << " ";
        }
    }
    cout << endl;
  }

    else if (choice == 2) {
      int side_length2;
      cout << "\n\nGreat choice! How big do you want the side length to be?" << endl << endl;
      cin >> side_length2;
      cout << "\n\nHere is your triangle: " << endl;
      for (int i = side_length2; i > 0; i--) { //controls the number of rows printed
        cout << endl;
        for (int j = 0; j < i; j++) { //prints stars based on the number of rows the outside loop is currently at
        cout << "*" << " ";
        }
      }
      cout << endl;
    }
}
